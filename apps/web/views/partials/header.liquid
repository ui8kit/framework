{% comment %} Auto-generated partial for Header. {% endcomment %}
<nav data-class="header" class="py-4 bg-background border shadow-sm">
  <div data-class="header-container" class="max-w-6xl mx-auto px-4">
    <div data-class="header-content" class="flex justify-between items-center gap-8">
      <!-- Brand -->
      <a href="/" data-class="header-brand">
        <div data-class="header-brand-content" class="flex items-center gap-2">
          <span data-class="header-brand-title" class="text-xl font-bold text-primary">
            {{ title | default: 'UI8Kit' }}
          </span>
          <span data-class="header-brand-subtitle" class="text-sm text-muted-foreground">
            {{ subtitle | default: 'Design System' }}
          </span>
        </div>
      </a>

      <!-- Right section -->
      <div data-class="header-right-section" class="flex items-center gap-4">
        <!-- Desktop Navigation -->
        {% if navItems %}
        <nav data-class="header-nav" class="hidden md:flex items-center gap-2">
          {% for item in navItems %}
          <a 
            href="{{ item.url }}" 
            data-class="header-nav-item"
            class="px-3 py-2 text-sm font-medium rounded-md hover:bg-accent"
          >
            {{ item.title }}
          </a>
          {% endfor %}
        </nav>
        {% endif %}

        <!-- Theme Toggle -->
        <div data-class="header-controls" class="flex items-center gap-2">
          <button 
            data-toggle-dark
            data-class="header-theme-toggle" 
            class="p-2 rounded-md hover:bg-accent"
            aria-label="Toggle dark mode"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</nav>
