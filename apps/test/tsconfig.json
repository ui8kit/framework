{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@ui8kit/core": [
        "../../packages/core/src/index.ts"
      ],
      "@ui8kit/template": [
        "../../packages/template/src/index.ts"
      ],
      "@ui8kit/blocks": [
        "../../packages/blocks/src/index.ts"
      ],
      "@ui8kit/data": [
        "src/data/index.ts"
      ]
    }
  },
  "include": [
    "src"
  ]
}
