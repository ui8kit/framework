+export function uniqueSlug(text: string, existing: Set<string>): string {
+  let slug = slugify(text)
+  let counter = 1
+  const base = slug
+  
+  while (existing.has(slug)) {
+    slug = `${base}-${counter}`
+    counter++
+  }
+  
+  existing.add(slug)
+  return slug
