{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@ui8kit/sdk": ["../sdk/src/index.ts"],
      "@ui8kit/sdk/config": ["../sdk/src/config.ts"],
      "@ui8kit/sdk/validate": ["../sdk/src/validate.ts"],
      "@ui8kit/sdk/build": ["../sdk/src/build.ts"],
      "@ui8kit/sdk/data": ["../sdk/src/data.ts"],
      "@ui8kit/sdk/constants": ["../sdk/src/constants.ts"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
