{
  "name": "@ui8kit/generator",
  "version": "0.1.0",
  "description": "Static site generator for UI8Kit - converts React to Liquid templates",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "lint": "bunx tsc --noEmit",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@ui8kit/preprocessor": "workspace:*",
    "liquidjs": "^10.10.0"
  },
  "devDependencies": {
    "bun": "^1.3.0",
    "typescript": "^5.8.0",
    "@types/bun": "^1.0.0"
  }
}
