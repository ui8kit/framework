{
  "name": "@ui8kit/blocks",
  "version": "0.1.0",
  "description": "Business blocks with DSL for UI8Kit framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./blocks": {
      "import": "./dist/blocks/index.js",
      "types": "./dist/blocks/index.d.ts"
    },
    "./layouts": {
      "import": "./dist/layouts/index.js",
      "types": "./dist/layouts/index.d.ts"
    },
    "./partials": {
      "import": "./dist/partials/index.js",
      "types": "./dist/partials/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build && tsc -p tsconfig.build.json --emitDeclarationOnly --declaration --outDir dist",
    "dev": "vite build --watch",
    "generate:registry": "bun run generator.config.ts",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@ui8kit/core": "workspace:*",
    "@ui8kit/template": "workspace:*",
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  }
}
