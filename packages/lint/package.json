{
  "name": "@ui8kit/lint",
  "version": "0.1.0",
  "description": "Linting and validation utilities for UI8Kit DSL props",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./source": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "validate:whitelist": "bun run src/cli/validate-whitelist.ts",
    "validate:dsl": "bun run src/cli/validate-dsl.ts"
  },
  "bin": {
    "ui8kit-lint": "./src/cli/validate-whitelist.ts",
    "ui8kit-lint-dsl": "./src/cli/validate-dsl.ts"
  },
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "@babel/types": "^7.24.0",
    "@types/babel__traverse": "^7.28.0"
  },
  "peerDependencies": {
    "@ui8kit/core": ">=0.0.1"
  },
  "peerDependenciesMeta": {
    "@ui8kit/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "typescript": "^5.8.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.3"
  }
}
